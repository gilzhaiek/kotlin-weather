<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="city"
            type="com.eightman.kweather.network.City" />

        <variable
            name="forecast"
            type="com.eightman.kweather.network.Forecast" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        tools:context="com.eightman.kweather.ui.fragments.ForecastListFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

        <TextView
            android:id="@+id/forecastItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toTopOf="parent"
            app:secToDate="@{forecast.dt}"
            tools:text="Friday, Oct. 25" />


        <TextView
            android:id="@+id/forecastItemWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_half"
            android:text="@{forecast.weatherFirst.description}"
            app:layout_constraintStart_toStartOf="@id/forecastItemDate"
            app:layout_constraintTop_toBottomOf="@id/forecastItemDate"
            tools:text="Scattered Clouds" />

        <TextView
            android:id="@+id/forecastItemHighTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="end"
            app:inImperial="@{city.inImperial}"
            app:kelvin="@{forecast.temp.max}"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintTop_toTopOf="@id/forecastItemDate"
            tools:text="99.0°" />

        <TextView
            android:id="@+id/forecastItemLowTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="end"
            app:inImperial="@{city.inImperial}"
            app:kelvin="@{forecast.temp.min}"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintTop_toTopOf="@id/forecastItemWeather"
            tools:text="-99.0°" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:contentDescription="@string/weather_icon"
            android:src="@{forecast.weatherFirst.iconRes}"
            app:layout_constraintBottom_toBottomOf="@id/forecastItemWeather"
            app:layout_constraintEnd_toStartOf="@id/forecastItemHighTemp"
            app:layout_constraintTop_toTopOf="@id/forecastItemDate" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>